<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Your All Departments </h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form id="frmDepartment" method="post">
            <div class="row">
                <div class="col-md-6">
                    <fieldset>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">School Name:</label>
                            <div class="col-lg-9">
                                <input type="text" name="SchoolName" class="form-control required" placeholder="Allied School">
                            </div>
                        </div>

                    </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Department Name:</label>
                            <div class="col-lg-9">
                                <div class="col-lg-9">
                                    <input type="text" name="Department" class="form-control required" placeholder="HRM ">
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>


